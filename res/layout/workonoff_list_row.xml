<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearlayout0"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:scaleType="centerCrop"
            android:src="@drawable/list_color_1_1"
            android:id="@+id/colorLayout"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/iconImg"
            android:layout_gravity="center_vertical"
            android:src="@drawable/favorite_bus_and_stop"
            android:layout_marginLeft="10dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:text="9494"
                android:layout_gravity="center_vertical"
                android:id="@+id/name" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="파크타운. 롯데..."
                    android:textColor="#949494"
                    android:id="@+id/subMain"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="#949494"
                    android:id="@+id/subMain2"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/delete_2"
        android:scaleType="center"
        android:id="@+id/delImg"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:scaleType="center"
        android:id="@+id/addBtn"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="추가"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arriveLayout"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/linearlayout0"
        android:layout_marginRight="10dp"
        android:gravity="left"
        >

        <TextView
            android:id="@+id/arrive_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/arrive_color"
            android:text="약 1분 [1번째전] (36석)"/>

        <TextView
            android:id="@+id/arrive_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/arrive_color"
            android:text="약 15분 [12번째전] (20석)"/>
    </LinearLayout>

</RelativeLayout>
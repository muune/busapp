    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setPositionEnd"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_search_list_r_bg"
       	android:drawableLeft="@drawable/btn_search_ic_start"
        android:gravity="center"
        android:text="도착"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:drawablePadding="10dp"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setPositionStart"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/setPositionEnd"
        android:background="@drawable/btn_search_list_l_bg"
        android:drawableLeft="@drawable/btn_search_ic_arrival"
        android:gravity="center"
        android:drawablePadding="10dp"    
        android:padding="10dp"
        android:text="출발"/>
    
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleResult"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/setPositionStart"      
        android:singleLine="true"
        android:textSize="20sp"
        android:textColor="#333333"
        />
    
    

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1">
	    <ImageView
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:id="@+id/widget_text_back"
	        android:src="@drawable/widget_top1_1"
	        android:scaleType="fitXY"/>
	    <TextView 
	        android:id="@+id/widget_type2_stop_name"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_centerInParent="true"
	        android:gravity="center"
	        android:textSize="20dp"
	        android:textStyle="bold"
	        android:textColor="#FFFFFF"/>
	    <ImageButton 
	        android:id="@+id/widget_type2_btn_refresh"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="15dp"
	        android:src="@drawable/widget_refresh"
	        android:background="#00FFFFFF"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/widget_type2_list_layout"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="4"
	    android:visibility="gone">
		<ListView android:id="@+id/widget_type2_list"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:background="@drawable/widget_list_bg"
		    android:dividerHeight="1dp"
		    android:divider="#c1c1c1"/>
		<RelativeLayout 
		    android:id="@+id/widget_type2_dim"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:background="@drawable/widget_list_bg_dim"
		    android:visibility="gone">
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:layout_centerInParent="true"
		        android:gravity="center">
			    <ProgressBar 
			        android:id="@+id/widget_type2_progress"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"/>
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="20dp"
			        android:text="시간 정보를 받아오는 중"
			        android:textColor="#FFF"/>
	    	</LinearLayout>
	    </RelativeLayout>
	</RelativeLayout>
</LinearLayout>